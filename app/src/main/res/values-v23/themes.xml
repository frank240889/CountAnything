<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CountAnything.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CountAnything.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CountAnything.LargeComponent</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="ActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShapeAppearance.CountAnything.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_rounded_shape</item>
    </style>

    <style name="ShapeAppearance.CountAnything.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_rounded_shape</item>
    </style>

    <style name="ShapeAppearance.CountAnything.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_rounded_shape</item>
    </style>

    <style name="ThemeCounters.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ThemeCounters.RoundedAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ThemeCounters.ShapeAppearanceOverlay.Dialog.Rounded</item>
    </style>

    <style name="ThemeCounters.ShapeAppearanceOverlay.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>

    </style>
</resources>